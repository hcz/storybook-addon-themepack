{
  "compilerOptions": {
    "baseUrl": "./dist",
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "inlineSources": true,
    "jsx": "react",
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "target": "es5"
  },
  "include": [
    "src"
  ]
}
